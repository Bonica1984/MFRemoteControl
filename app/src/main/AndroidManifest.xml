<?xml version="1.0" encoding="utf-8"?>
<manifest package="cn.com.clb.mfremotecontrol"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AddServerActivity"
            android:label="@string/title_add">
        </activity>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity
            android:name="cn.com.clb.mfremotecontrol.ServerSelectActivity"
            android:label="@string/title_serverSelect">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
        <activity
            android:name="cn.com.clb.mfremotecontrol.OperateActivity"
            android:label="@string/title_operate">
        </activity>
        <activity android:name="cn.com.clb.mfremotecontrol.EditServerActivity"
            android:label="@string/title_edit">
        </activity>
    </application>

</manifest>